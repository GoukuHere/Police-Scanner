<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.policescanner">

    <application
        android:allowBackup="true"
        android:icon="@drawable/mainicon4"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.PoliceScanner">
        <activity android:name=".Registration"></activity>
        <activity android:name=".ArrestList" />
        <activity android:name=".Bounty" />
        <activity android:name=".MostWantedList" />
        <activity android:name=".StatusPage" />
        <activity android:name=".CheckHistory" />
        <activity android:name=".Criminal_Record" />
        <activity android:name=".MainPage" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>