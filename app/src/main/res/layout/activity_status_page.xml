<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background3"
    tools:context=".StatusPage">

    <ImageView
        android:id="@+id/najam_criminal"
        android:layout_width="247dp"
        android:layout_height="301dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.445"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/criminal_najam" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="267dp"
        android:layout_height="30dp"
        android:layout_marginTop="108dp"
        android:background="#00A82828"
        android:text="Criminal Record:    Found"
        android:textColor="#F6F5F5"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/najam_criminal" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="266dp"
        android:layout_height="27dp"
        android:layout_marginTop="25dp"
        android:background="#00A51F1F"
        android:text="Criminal Status:    In Jail"
        android:textColor="#F6F5F5"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="264dp"
        android:layout_height="25dp"
        android:layout_marginTop="25dp"
        android:background="#00A12323"
        android:text="Accused Of:    Section 302"
        android:textColor="#F6F5F5"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="280dp"
        android:layout_height="33dp"
        android:layout_marginTop="28dp"
        android:background="#7E932C2C"
        android:text="Name:  Najam Israr Khan"
        android:textColor="#EFEBEB"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/najam_criminal" />

    <Button
        android:id="@+id/criminal_button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="Criminal Menu"
        app:backgroundTint="#80D11D23"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.94"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />
</androidx.constraintlayout.widget.ConstraintLayout>